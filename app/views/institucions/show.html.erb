<% provide(:title, 'Información de la institución') %>
<h1>Información de la institución</h1>
<div class="row">
	<div class="span6 well-show">
		<p>
			<strong>ID:</strong> <%= @institucion.id %>
		</p>
		<p>
			<strong>Nombre:</strong> <%= @institucion.nombre %>
		</p>
		<p>
			<strong>Educativa:</strong> <%= boolean_to_icon @institucion.educativa %>
		</p>
	</div>
	<div class="span2 pull-right">
		<%= render 'institucion_admin_btn', obj: @institucion, size: 'btn-large' %>
	</div>
</div>

<h2>Planteles asociados</h2>
<% if @institucion.plantels.empty? %>
<p class="lead">No hay ningún plantel asociado</p>
<% else %>
<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th class="span1">ID</th>
			<th>Nombre</th>
			<th class="span2">Acción</th>
		</tr>
	</thead>
	<tbody>
		<% @institucion.plantels.each do |p| %>
		<tr>
			<td><%= p.id %></td>
			<td><%= p.nombre %></td>
			<td>
				<%= render 'plantel_admin_btn', obj: p, size: 'btn-small' %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<% end %>
<h6 class="muted right">Creada: <%= @institucion.created_at %></h6>
<h6 class="muted right">Última actualización: <%= @institucion.updated_at %></h6>