<%= provide(:title, 'Catálogo de instituciones') %>
<% provide(:sidebar_active, :instituciones) %>
<h1>Catálogo de instituciones</h1>

<%= link_to "Registrar nueva", new_institucion_path, class: 'btn btn-large btn-warning' %>

<% if @institucions.any? %>
	<%= will_paginate %>
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>ID</th>
				<th>Nombre</th>
				<th>Educativa</th>
				<th>Acciones</th>
			</tr>
		</thead>
		<tbody>
			<% @institucions.each do |i| %>
			<tr>
				<td><%= i.id %></td>
				<td><%= link_to i, institucion_path(i) %></td>
				<td><%= boolean_to_icon i.educativa %></td>
				<td>
					<%= render 'institucion_admin_btn', obj: i, size: 'btn-small' %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<%= will_paginate %>
<% else %>
	<h1>No hay instituciones</h1>
<% end %>