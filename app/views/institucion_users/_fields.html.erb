<legend>Datos de la institución</legend>
<%= f.association :institucion, label_method: :nombre, input_html: {class: 'use-select2 input-block-level', 'data-placeholder' => 'Selecciona tu institución'} %>
<%= f.input :plantel_id do  %>
	<%= f.grouped_collection_select :plantel_id, Institucion.order("educativa DESC"), :plantels, :nombre, :id,
	:nombre, {include_blank: true}, {class: 'use-select2 input-block-level', 
		'data-placeholder' => 'Selecciona una institución primero'} %>
<% end %>
<%= f.input :domicilio %>
<%= f.input :area %>
<%= f.input :responsable %>
<%= f.input :cargo %>
<%= f.input :tel do %>
	<%= f.text_field :tel, class: "input-medium", placeholder: '########'  %>
	Ext.
	<%= f.text_field :telExt, class: "input-mini", placeholder: '#####' %>
<% end %>