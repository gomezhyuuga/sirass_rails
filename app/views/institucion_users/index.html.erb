<% provide(:title, 'Lista de institucion_users Afiliadas') %>
<% provide(:sidebar_active, :instituciones_users) %>
<% if @institucion_users.any? %>
	<h1>Instituciones registradas</h1>
	<%= will_paginate @institucion_users %>
		<table class="table table-striped table-bordered table-hover">
			<thead>
				<tr>
					<th>Usuario</th>
					<th>InstituciÃ³n</th>
					<th>Plantel</th>
					<th>Responsable</th>
					<th>Acciones</th>
				</tr>
			</thead>
			<tfoot>
				<tr>
					<th colspan="5" class="right">
						Cantidad de instituciones registradas: <%= @institucion_users.length %>
					</th>
				</tr>
			</tfoot>
			<tbody>
				<% @institucion_users.each do |i| %>
					<tr>
						<td>
							<%= link_to i.user.username, i %>
						</td>
						<td>
							<%= link_to truncate(i.institucion.nombre, length: 50), institucion_path(i.institucion) %>
						</td>
						<td>
							<%= truncate(i.nombre_plantel) %>
						</td>
						<td>
							<%= i.responsable %>
						</td>
						<td>
							<%= render 'institucion_users/admin_btn', obj: i %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	<%= will_paginate %>
<% else %>
<h1>No se encontraron institucion_users afiliadas</h1>
<% end %>
