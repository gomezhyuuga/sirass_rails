<% provide(:title, 'Lista de Prestadores') %>
<% provide(:sidebar_active, :prestadores) %>
<% if @prestadors.any? %>
	<%= will_paginate %>
		<table class="table table-striped table-bordered table-hover" id="lista-prestadores">
			<thead>
				<tr>
					<th>Nombre</th>
					<th>Usuario</th>
					<th>Inscripci√≥n</th>
					<th>Acciones</th>
				</tr>
			</thead>
			<tbody>
				<% @prestadors.each do |prestador| %>
					<tr>
						<td>
							<%= link_to "#{prestador.nombre} #{prestador.apaterno} #{prestador.amaterno}", prestador %>
						</td>
						<td>
							<%= prestador.user.username %>
						</td>
						<td>
							<% if prestador.inscripcion_actual %>
								<%= link_to prestador.inscripcion_actual, inscripcion_path(prestador.inscripcion_actual), class: 'btn btn-block btn-warning' %>
							<% else %>
								<i class="icon-remove"></i>
							<% end %>
						</td>
						<td>
							<%= render 'admin_btn', obj: prestador, size: 'btn-mini' %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	<%= will_paginate %>
<% else %>
<h1>No se encontraron prestadores</h1>
<% end %>
