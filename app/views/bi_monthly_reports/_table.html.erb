<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th class="center valign" colspan="2">Periodo</th>
			<th class="center valign" colspan="2">Horas</th>
			<th class="center valign" rowspan="2">Estado</th>
			<th class="center valign" rowspan="2">Acci√≥n</th>
		</tr>
		<tr>
			<th class="center valign">Del</th>
			<th class="center valign">Al</th>
			<th class="center valign">Reporte</th>
			<th class="center valign">Acumuladas</th>
		</tr>
	</thead>
	<tbody>
		<% reportes.each do |r| %>
		<tr>
			<td>
				<%= r.periodo_inicio %>
			</td>
			<td>
				<%= r.periodo_fin %>
			</td>
			<td>
				<%= r.horas %>
			</td>
			<td>
				<%= r.horas_acumuladas %>
			</td>
			<td>
				<span class="label <%= lbl_estado_reporte(r) %>">
					<%= r.estado_reporte.descripcion %>
				</span>
			</td>
			<td>
				<%= render 'bi_monthly_reports/admin_btn', obj: r %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>