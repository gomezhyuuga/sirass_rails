<div class = "page-header">
	<h1><%= @programa.nombre %>
		<small><%= @programa.cveprograma %> (<%= @programa.categoria %>)</small>
	</h1>
</div>
<% if can? :manage, Cprograma %>
<!-- ADMIN BUTTON -->
<div class="span2 pull-right">
  <%= render 'cprogramas/forms/admin_btn', obj: @programa %>
</div>
<% end %>
<!-- ESTADO DEL PROGRAMA -->
<div class="span1 pull-right">
  <span class="label <%= label_for_estado_programa(@programa.estado_programa.id) %>">
    <%= @programa.estado_programa.descripcion %>
  </span>
</div>
<% if logged_as? :prestador %>
<!-- INSCRIBIR BUTTON -->
<div class="span2 pull-right">
  <%= link_to inscripcion_servicio_path(programa: @programa.id),
    class: 'btn btn-success btn-block' do %>
    <i class="icon-plus-sign"></i>
    Inscribirse
  <% end %>
</div>
<% end %>
<!-- TABS -->
<ul class="nav nav-tabs">
  <li class="active">
  	<a href="#tab_unidad" data-toggle="tab">Datos de Unidad</a>
  </li>
  <li>
  	<a href="#tab_programa" data-toggle="tab">Datos de Programa</a>
  </li>
  <li>
  	<a href="#tab_caracteristicas" data-toggle="tab">Caracter&iacute;sticas</a>
  </li>
  <li>
  	<a href="#tab_perfil" data-toggle="tab">Perfil Acad&eacute;mico</a>
  </li>
</ul>

<!-- START TAB CONTENT -->
<div class="tab-content">
	<!-- TAB DATOS DE UNIDAD -->
  <div class="tab-pane active" id="tab_unidad">
    <div class="row">
      <div class="span6">
        <h4>Institución o Dependencia</h4>
        <p><%= @programa.institucion_user.institucion.nombre %></p>
      </div>
      <div class="span6">
        <h4>Plantel</h4>
        <% if @programa.institucion_user.plantel %>
        <p>
          <%= @programa.institucion_user.plantel.nombre %>
        </p>
        <% else %>
          <p>
            Sin plantel.
          </p>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="span4">
        <h4>Domicilio</h4>
        <p><%= @programa.institucion_user.domicilio %></p>
      </div>
      <div class="span4">
        <h4>Área o Subdirección</h4>
        <p><%= @programa.institucion_user.area %></p>
      </div>
      <div class="span4">
        <h4>Teléfono</h4>
        <p><%= @programa.institucion_user.tel %> <strong>Ext.</strong> <%= @programa.institucion_user.telExt %></p>
      </div>
    </div>
    <!-- RESPONSABLES -->
  	<h4>Responsable (s) del programa</h4>
    <table class="table table-condensed table-bordered">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Cargo</th>
          <th>
            <i class="icon-envelope"></i>
            Correo electrónico
          </th>
        </tr>
      </thead>
      <tbody>
        <% @programa.responsables.each do |r| %>
        <tr>
          <td><%= r.encargado %></td>
          <td><%= r.cargo %></td>
          <td><%= r.email %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <!-- END TAB DATOS DE UNIDAD -->
  <!-- TAB DATOS DE PROGRAMA -->
  <div class="tab-pane" id="tab_programa">
  	<h4>Objetivo General</h4>
    <p><%= @programa.objGeneral %></p>
  	<h4>Justificación</h4>
    <p><%= @programa.justificacion %></p>
  	<h4>Desarrollo</h4>
  	<p><%= @programa.desarrollo %></p>
  	<h4>Recursos</h4>
    <p><%= @programa.recursos %></p>
  	<h4>Evaluaci&oacute;n</h4>
  	<p><%= @programa.evaluacion %></p>
  	<h4>Resultados</h4>
  	<p><%= @programa.resultados %></p>
  </div>
  <div class="tab-pane" id="tab_caracteristicas">
  	<div class="row">
      <div class="span4">
        <h4>Días de Realización</h4>
        <p>
          <%= @programa.dias.map { |d| d.dia_semana }.join(', ') %>
        </p>
      </div>
      <div class="span4">
        <h4>Lugar de Realizaci&oacute;n</h4>
        <p><%= @programa.lugar %></p>
      </div>
      <div class="span4">
        <h4>Poblaci&oacute;n a atender</h4>
        <p>
          <%= @programa.poblacion_programas.map { |p| p.descripcion }.join(', ') %>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="span3">
        <h4>Tipo</h4>
        <p><%= @programa.tipo_programa.descripcion %></p>
      </div>
      <div class="span3">
        <h4>Duraci&oacute;n</h4>
        <p><%= @programa.ftiempo %></p>
      </div>
      <div class="span3">
        <h4>Alcance</h4>
        <p><%= @programa.alcance_programas.map {|a| a.descripcion}.join(', ') %></p>
      </div>
      <div class="span3">
        <h4>Horario</h4>
        <p><%= @programa.horario_programa.descripcion %></p>
      </div>
    </div>
  </div>
  <div class="tab-pane" id="tab_perfil">
    <table class="table table-striped table-bordered" style="width: 100%;">
      <thead>
        <tr>
          <th>Actividades</th>
          <th>Licenciatura</th>
          <th>Solicitados</th>
          <th>Vacantes</th>
        </tr>
      </thead>
      <tbody>
        <% @programa.licenciaturas.each do |l| %>
        <tr>
          <td>
            <textarea rows="10" readonly="true" style="resize:none; margin: 0 auto; display: block;" class="input-xxlarge"><%= l.actividad %></textarea>
          </td>
          <td><%= l.carrera %></td>
          <td><%= l.solicitados %></td>
          <td>x</td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<!-- END TAB CONTENT -->
<hr />
<% if can? :manage, Cprograma %>
<!-- OBSERVACIONES -->
<%= render 'cprogramas/forms/observaciones' %>
<% end %>