<% provide(:title, 'Nuevo Programa') %>
<% content_for :stylesheet do %>
	<%= stylesheet_link_tag "institucion_pages" %>
<% end %>

<h2>Registra tu programa de Servicio Social</h2>

<%= simple_form_for @cprograma, html: { class: 'form-horizontal' },
	defaults: { input_html: { class: 'input-block-level' } } do |f| %>
	<%= render 'cprogramas/fields', f: f %>
	<div class="form-actions">
			<%= f.submit 'Enviar programa', :class => 'btn btn-success'%>
			<%= button_tag "Limpiar campos", type: "reset", class: "btn " %>
		</div>
<% end %>