<% provide(:title, 'Editar Programa') %>
<% content_for :stylesheet do %>
	<%= stylesheet_link_tag "institucion_pages" %>
<% end %>
<% content_for :javascript do %>
	<%= javascript_include_tag "cprogramas" %>
<% end %>

<h2>Edita informaci√≥n de tu programa de Servicio Social</h2>
<h6 class="center text-error">OBSERVACIONES HECHAS POR EL RESPONSABLE DEL PROGRAMA</h6>
<blockquote class="text-warning">
	<%= simple_format(@cprograma.observaciones || "Sin observaciones") %>
</blockquote>
<%= simple_form_for @cprograma, html: { class: 'form-horizontal' },
	defaults: { input_html: { class: 'input-block-level' } } do |f| %>
	<%= render 'cprogramas/forms/fields', f: f, type: 'nuevo' %>
<% end %>
<hr />
<% if can? :manage, Cprograma %>
<!-- OBSERVACIONES -->
<%= render 'cprogramas/forms/observaciones', programa: @cprograma %>
<% end %>
<% content_for :javascript do %>
	<%= javascript_include_tag "institucion_users" %>
<% end %>