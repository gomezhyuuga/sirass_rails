<div class="tabbable">
	<ul class="nav nav-tabs">
		<li class="active"><a href="#tab1" data-toggle="tab">Datos</a></li>
		<li><a href="#tab2" data-toggle="tab">Caracter&iacute;sticas</a></li>
		<li><a href="#tab3" data-toggle="tab">Perfil Acad&eacute;mico</a></li>
		<li><a href="#tab4" data-toggle="tab">Responsable</a></li>
		<li><a href="#tab5" data-toggle="tab">Observaciones</a></li>
	</ul>
</div>
<div class="tab-content">
	<div class="tab-pane active" id="tab1">
		<%= f.input :nombre, :input_html => {:class => "input-large"} %>
		<%= f.input :objGeneral, :input_html => { :rows => 5 }%>
		<%= f.input :justificacion, :input_html => { :rows => 5 } %>
		<%= f.input :desarrollo, :input_html => { :rows => 5 } %>
		<%= f.input :recursos, :input_html => { :rows => 5 } %>
		<%= f.input :evaluacion, :input_html => { :rows => 5 } %>
		<%= f.input :resultados, :input_html => { :rows => 5 } %>
		<div class="form-actions">
			<h6>Pulsa en <%= link_to 'Características del programa', '#' , :id => 'nextC' %> para continuar</h6>
		</div>
	</div>
	<div class="tab-pane" id="tab2">
		<%= f.association :tipo_programa, label_method: :descripcion, :input_html => {:class => "input-xlarge"} %>
		<%= f.input :lugar, :input_html => {:class => "input-large"} %>
		<div class="form-actions">
			<h6>Pulsa en <%= link_to 'Perfil Académico', '#' , :id => 'nextP' %> para continuar</h6>
		</div>
	</div>
	<div class="tab-pane" id="tab3">
		<%= f.simple_fields_for :licenciaturas do |builder| %>
			<%= render 'cprogramas/actsprog', f: builder %>
		<% end %>
		<div class="form-actions">
			<h6>Pulsa en <%= link_to 'Responsable', '#' , :id => 'nextR' %> para continuar</h6>
		</div>
	</div>
	<div class="tab-pane" id="tab4">
		<%= f.simple_fields_for :responsables do |respon| %>
			<%= render 'cprogramas/fieldenc', f: respon %>
		<% end %>
		<div class="form-actions">
			<h6>Pulsa en <%= link_to 'Observaciones', '#' , :id => 'nextO' %> para continuar</h6>
		</div>
	</div>
	<div class="tab-pane" id="tab5">
		<%= f.input :observaciones, :input_html => { :rows => 5 } %>
		<div class="form-actions">
			<%= f.submit 'registrar', :class => 'btn btn-large btn-success'%>
		</div>
	</div>
</div>