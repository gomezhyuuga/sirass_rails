	<div class="span4">
		<%= f.input :nombre, label: "URL", input_html: {type: :url},
		hint: 'Firefox, Chrome y Opera' %>
		<%= f.input :apaterno, label: "Color", input_html: {type: :color}, 
		hint: 'Chrome y Opera' %>
