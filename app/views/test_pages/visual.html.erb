		hint: 'bootstrap-datepicker' %>
		<%= f.input :dCalle, label: 'Chosen', collection: @instituciones, label_method: :nombre,
		input_html: {'data-placeholder' => 'Escoge una', class: 'chzn-select' }, hint: 'Chosen selects' %>
	</div>
	<div class="span4">
		<%= f.input :nombre, label: "Time", input_html: {type: :time},
		hint: 'Chrome y Opera' %>
		<%= f.input :nombre, label: "Email", input_html: {type: :email},
		hint: 'Chrome, Firefox y Opera' %>
		<%= f.input :nombre, label: "Number", input_html: {type: :number, max: 5, min: 1},
		hint: 'Chrome, Safari y Opera' %>
		<%= f.input :nombre, label: "Range", input_html: {type: :range, max: 15, min: 1},
		hint: 'Chrome, Safari y Opera' %>
