<!DOCTYPE html>
<html lang="es">
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= csrf_meta_tags %>

  <%= render 'shared/shim' %>
  <%= render 'shared/livereload' if Rails.env.development? %>
  <%= render 'shared/seo' %>

  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= stylesheet_link_tag "print_reports", :media => "all" %>
  <%= yield(:head) %>
</head>
<body id="<%= controller_name %>-<%= action_name %>">
  
  <div class="container">
    <header class="clearfix">
      <%= image_tag 'UACM_logo.jpeg' %>
      <h1>
        <%= yield :title %>
      </h1>
    </header>
    <%= yield %>
  </div> <!-- /container -->

  <!-- Javascripts
  ================================================== -->
  <!-- Placed at the end of the document so the pages load faster -->
  <%= javascript_include_tag "application" %>
</body>
</html>
