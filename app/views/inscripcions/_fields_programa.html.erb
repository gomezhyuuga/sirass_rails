<!-- INICIO DATOS DE PROGRAMA -->
<fieldset>
  <legend>Datos del Programa de Servicio Social</legend>
  <%= f.input :responsable, input_html: { class: 'input-xlarge' } %>
  <%= f.input :cargoResponsable, input_html: { class: 'input-xlarge' } %>
  <%= f.input :area, input_html: { class: 'input-xlarge' } %>
  <%= f.association :dias, label_method: :dia_semana, input_html: { class: 'use-select2 input-xlarge', 'data-placeholder' => 'Selecciona los dÃ­as' } %>
	<%= f.input :hora_entrada do %>
		<div class="input-append bootstrap-timepicker-component">
			<%= f.text_field :hora_entrada, class: 'use-timepicker input-mini' %>
			<span class="add-on">
	  		<i class="icon-time"></i>
	  	</span>
		</div>
	<% end %>
	<%= f.input :hora_salida do %>
		<div class="input-append bootstrap-timepicker-component">
			<%= f.text_field :hora_salida, class: 'use-timepicker input-mini' %>
			<span class="add-on">
	  		<i class="icon-time"></i>
	  	</span>
		</div>
	<% end %>
	<%= f.input :fecha_inicio, as: :string do %>
		<div class="input-append">
			<%= f.text_field :fecha_inicio, class: 'input-small', "data-behaviour" => "datepicker",
			value: current_date %>
			<span class="add-on">
				<i class="icon-calendar"></i>
			</span>
		</div>
	<% end %>
	<%= f.input :fecha_fin, as: :string do %>
		<div class="input-append">
			<%= f.text_field :fecha_fin, class: 'input-small', "data-behaviour" => "datepicker",
			value: current_date %>
			<span class="add-on">
				<i class="icon-calendar"></i>
			</span>
		</div>
	<% end %>
	<%= f.input :difundir, as: :radio_buttons,
		collection: [["Acepto que mis datos puedan ser difundidos", true],
		["Deseo que mis datos se mantengan en privado", false]] %>
</fieldset>
<!-- FIN DATOS DE PROGRAMA -->

<div class="form-actions">
	<%= f.submit "Enviar", class: "btn btn-success" %>
</div>